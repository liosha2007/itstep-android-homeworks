<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:editTextColor">@color/textColor</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:background">#22397F</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
        <item name="android:background">@color/commonBackground</item>
    </style>

</resources>
